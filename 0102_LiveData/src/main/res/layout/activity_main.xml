<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/test_mutable_live_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="普通粘性MutableLiveData的使用" />

    <Button
        android:id="@+id/test_mutable_live_data2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="非粘性MutableLiveData的使用" />

    <Button
        android:id="@+id/test_live_data_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LiveData的封装使用" />

</LinearLayout>